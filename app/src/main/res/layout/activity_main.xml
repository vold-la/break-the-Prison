<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgbk">

    <TextView
        android:id="@+id/score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Score : 0"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#6b4984"
        android:paddingVertical="14dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:background="#808080"/>

    <FrameLayout
        android:id="@+id/Frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/prison">

        <ImageView
            android:id="@+id/prisoner"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/right"
            android:layout_gravity="bottom"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/ray"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ray"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/hammer"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/hammer"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/dynamite"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/dynamite"
            android:visibility="invisible"/>

        <LinearLayout
            android:id="@+id/firstLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Break the prison"
                android:textColor="#6b4984"
                android:textSize="24sp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/hS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="High Score : 100"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#6b4984"
                android:layout_marginTop="80dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="START"
                android:background="#6b4984"
                android:layout_marginTop="60dp"
                android:onClick="start"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exit"
                android:background="#6b4984"
                android:layout_marginTop="20dp"
                android:onClick="Exit"/>

        </LinearLayout>

    </FrameLayout>
</LinearLayout>

</android.support.constraint.ConstraintLayout>